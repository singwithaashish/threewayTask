{
    "compilerOptions": {
      "target": "ES6",
      "module": "ES2015",
      "outDir": "./dist",
      "rootDir": "./src",
      "strict": true,
      "moduleResolution": "Node",
      "esModuleInterop": true
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules"],
    "ts-node": {
      "esm": true,
      "experimentalSpecifierResolution": "node"
    }
  }
  